<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="hr_department_view_form" model="ir.ui.view">
        <field name="name">hr.department.view.form</field>
        <field name="model">hr.department</field>
        <field name="inherit_id" ref="hr.view_department_form" />
        <field name="arch" type="xml">

            <xpath expr="//group" position="after">
                <group string='1C' col="4">
                    <field name="guid_1c" colspan="2"/>
                    <field name="code_1c" colspan="2"/>
                </group>
                <group string='Справочник сотрудников' col="4">
                    <field name="is_view_adbook" colspan="2"/>
                </group>
            </xpath>

            
        </field>
    </record>
</odoo>

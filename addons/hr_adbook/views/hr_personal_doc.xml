<?xml version="1.0"?>
<odoo>

    <record id="hr_recruitment_doc_view_tree" model="ir.ui.view">
        <field name="name">hr.recruitment_doc.tree</field>
        <field name="model">hr.recruitment_doc</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="number_1c"/>
                <field name="name"/>
                <field name="job_title"/>
                <field name="posted"/>
            </tree>
        </field>
    </record>

    <record id="hr_recruitment_doc_action" model="ir.actions.act_window">
        <field name="name">Прием на работу</field>
        <field name="res_model">hr.recruitment_doc</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">

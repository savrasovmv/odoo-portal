<?xml version="1.0"?>
<odoo>
    <record id="ad_department_view_tree" model="ir.ui.view">
        <field name="name">ad.department.tree</field>
        <field name="model">ad.department</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="ou_id"/>
            </tree>
        </field>
    </record>

    <record id="ad_department_action" model="ir.actions.act_window">
        <field name="name">Подразделения</field>
        <field name="res_model">ad.department</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p>
             Создайте новую запись
          </p>
        </field>
    </record>

   
</odoo>

<!-- Область контента -->
<templates id="template" xml:space="preserve">
    <t t-name="website_snippets_ets.birthday_list" >

        <t t-foreach="employer_list" t-as="employer">
            <div class="card-body d-flex m-1 p-0">
                <div width="30px" height="30px" class="d-flex o_website_bithday_photo m-1">
                    <img t-attа-src="data:image/png;base64,{{employer.photo}}"/>
                </div>
                <div class="column m-0 ml-1">
                    <div class="d-flex">
                        <h5 class="m-0"><t t-esc="employer.name"/></h5>
                    </div>
                    <div class="d-flex small">
                        <t t-esc="employer.job_title"/>
                    </div>
                </div>
            </div>

        </t>
        
        
        
    </t>


    
</templates>